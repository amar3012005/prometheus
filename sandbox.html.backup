    <script>
        const logsPanel = document.getElementById('logsPanel');
        const fireBtn = document.getElementById('fireBtn');
        const heroPrompt = document.getElementById('heroPrompt');
        const executionDash = document.getElementById('executionDash');
        const modalOverlay = document.getElementById('modalOverlay');
        const confirmConsult = document.getElementById('confirmConsult');
        const architectQuery = document.getElementById('architectQuery');
        const modalInput = document.getElementById('modalInput');
        const mainInput = document.getElementById('mainInput');

        let session_id = 'session_' + Math.random().toString(36).substr(2, 9);
        let lastResponse = null;
        let pollingInterval = null;

        function addLog(tag, message, ts) {
            const entry = document.createElement('div');
            entry.className = 'log-entry';
            const timeStr = ts || new Date().toLocaleTimeString('en-US', { hour12: false, hour: '2-digit', minute: '2-digit', second: '2-digit' });

            let tagClass = tag.toLowerCase();
            entry.innerHTML = `
                <span class="log-t">${timeStr}</span>
                <span class="log-tag ${tagClass}">${tag.toUpperCase()}</span>
                ${message}
            `;

            logsPanel.appendChild(entry);
            logsPanel.scrollTop = logsPanel.scrollHeight;
        }

        function updateProgress(id, val) {
            const el = document.getElementById(id);
            const valEl = document.getElementById(id + '-val');
            if (el) el.style.width = val + '%';
            if (valEl) valEl.innerText = Math.round(val) + '%';
        }

        async function delay(ms) { return new Promise(resolve => setTimeout(resolve, ms)); }

        async function callArchitect(message) {
            try {
                const response = await fetch('http://localhost:8082/api/chat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ message, session_id })
                });
                return await response.json();
            } catch (e) {
                console.error("API Error:", e);
                return { next_question: "Connection error with Architect. Starting build with defaults.", completeness_score: 100 };
            }
        }

        async function triggerExecution() {
            try {
                await fetch('http://localhost:8082/api/execute', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ session_id })
                });
            } catch (e) {
                console.error("Execution Trigger Error:", e);
            }
        }

        async function pollLogs() {
            try {
                const response = await fetch('http://localhost:8082/api/logs');
                const data = await response.json();

                // Clear and repopulate logs
                logsPanel.innerHTML = '';
                data.logs.forEach(log => addLog(log.tag, log.msg, log.ts));

                // Map progress to phases
                const p = data.progress;
                if (p > 0) {
                    document.getElementById('phase1').classList.add('active');
                    updateProgress('p1-t1', Math.min(p * 2, 100));
                    updateProgress('p1-t2', Math.max(0, Math.min((p - 30) * 3, 100)));
                }
                if (p > 40) {
                    document.getElementById('phase2').classList.add('active');
                    updateProgress('p2-t1', Math.min((p - 40) * 3, 100));
                    updateProgress('p2-t2', Math.max(0, Math.min((p - 70) * 3, 100)));
                }
                if (p > 80) {
                    document.getElementById('phase3').classList.add('active');
                    updateProgress('p3-t1', Math.min((p - 80) * 5, 100));
                    updateProgress('p3-t2', Math.max(0, Math.min((p - 90) * 10, 100)));
                }

                if (data.complete) {
                    clearInterval(pollingInterval);
                    addLog('verifying', 'MISSION COMPLETE: Agent published to production cluster.');
                    document.querySelectorAll('.phase-status').forEach(el => {
                        el.innerText = 'Complete';
                        el.style.color = 'var(--color-success)';
                    });
                }
            } catch (e) {
                console.error("Polling Error:", e);
            }
        }

        fireBtn.onclick = async () => {
            const prompt = mainInput.value.trim();
            if (!prompt) return;

            fireBtn.disabled = true;
            fireBtn.innerHTML = '<span class="material-icons-round">sync</span>';

            lastResponse = await callArchitect(prompt);

            if (lastResponse.next_question && lastResponse.next_question !== "DONE") {
                architectQuery.innerText = `"${lastResponse.next_question}"`;
                modalOverlay.classList.add('active');
            } else {
                startworkflow();
            }

            fireBtn.disabled = false;
            fireBtn.innerHTML = '<span class="material-icons-round">arrow_upward</span>';
        };

        confirmConsult.onclick = async () => {
            const answer = modalInput.value.trim();
            if (!answer) {
                modalOverlay.classList.remove('active');
                startworkflow();
                return;
            }

            confirmConsult.disabled = true;
            confirmConsult.innerText = "Consulting...";

            lastResponse = await callArchitect(answer);
            modalInput.value = "";

            if (lastResponse.next_question && lastResponse.next_question !== "DONE" && lastResponse.completeness_score < 100) {
                architectQuery.innerText = `"${lastResponse.next_question}"`;
                confirmConsult.disabled = false;
                confirmConsult.innerText = "Continue Building";
            } else {
                modalOverlay.classList.remove('active');
                startworkflow();
            }
        };

        function closeModal() {
            modalOverlay.classList.remove('active');
            startworkflow();
        }

        async function startworkflow() {
            heroPrompt.style.opacity = '0';
            await delay(300);
            heroPrompt.style.display = 'none';
            executionDash.classList.add('active');
            logsPanel.innerHTML = '';

            addLog('planning', 'Connecting to build engine...');

            await triggerExecution();
            pollingInterval = setInterval(pollLogs, 1000);
        }
    </script>
</body>

</html>